{
    "name": "pitchart/transformer",
    "description": "A transducers implementation in PHP, with OOP powers",
    "keywords": ["transducer", "functional programming", "iterable", "collection", "composition"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien VITTE",
            "email": "vitte.julien@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "Pitchart\\Transformer\\": "src/"
        },
        "files": [
            "src/transform.php",
            "src/Transducer/transducers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pitchart\\Transformer\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixtures/tests_helpers.php"
        ]
    },
    "config" : {
        "sort-packages": true
    }
}
